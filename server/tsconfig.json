{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2021"]
  },
  "compileOnSave": true,
  "include": ["./src"]
}
